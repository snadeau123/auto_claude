{
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(python3 .claude/tools/*:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(pytest:*)",
      "Bash(pip:*)",
      "Bash(conda:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(jq:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "mcp__claude-in-chrome__*"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/context-usage.sh"
          }
        ]
      }
    ]
  }
}
